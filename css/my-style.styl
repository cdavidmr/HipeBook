@import 'https://fonts.googleapis.com/css?family=Ubuntu+Condensed'
@import 'https://fonts.googleapis.com/css?family=Bree+Serif'

fontnav = 'Ubuntu Condensed', sans-serif
fontsidenav = 'Bree Serif', serif
colorside1 = rgba(109, 109, 109, .9555)
colornav = rgb(3, 24, 33)
colorside = rgba(64, 80, 104, .9555)

border-radius()
  -webkit-border-radius: arguments
  -moz-border-radius: arguments
  border-radius: arguments

box-shadow()
	-webkit-box-shadow: arguments
	-moz-box-shadow: arguments
	box-shadow: arguments

body
	background-color #b7b7b7	
	position relative

a:link
  text-decoration: none

nav
  color: #fff
  background-color colornav
  font-family fontnav
  z-index 2
    
.sidebar1
	box-shadow  3px 2px 11px -2px rgba(0,0,0,0.75)
	width 180px
	height 100%
    z-index 1   
    position absolute
	background-color colorside	
	font-size 14px
	font-family fontsidenav
	font-weight normal

header
	color white
	
button
	cursor pointer
	
.btn-sidebar	
	height 5px
	width 5px
	
.btn-hover:active
	background-color rgba(255, 255, 255, 0.4)
	border-radius 5px

.brand
	color white
	font-size 20px
	font-weight bold	
	
.brand:hover
	color white
	
.subtem
	color colornav
.topic
	color white
	
.topic:hover
	color #9cff91
	font-size 16px
.social
	background-color rgba(255, 255, 255, .4555)
	width 85px
	box-shadow  3px 2px 11px -2px rgba(0,0,0,0.75)
	border-radius 35%
	text-align center

.logoso:hover
	transform scale(1.2)
	
